# Local Development Configuration Template
# 
# NOTE: This is a template file. The actual application-local.properties file
# already exists with example values. Edit that file directly with your credentials.
#
# SETUP INSTRUCTIONS:
# 1. Edit src/main/resources/application-local.properties and fill in your actual credentials
#
# 3. Run with local profile:
#    mvn spring-boot:run -Dspring-boot.run.profiles=local
#    OR
#    java -jar target/rank-forge-server-1.0-SNAPSHOT.jar --spring.profiles.active=local
#
# ALTERNATIVE: Set environment variables instead (no file needed):
#    export AZURE_SQL_URL="..."
#    export AZURE_SQL_USERNAME="..."
#    export AZURE_SQL_PASSWORD="..."
#    export AWS_ACCESS_KEY_ID="..."
#    export AWS_SECRET_ACCESS_KEY="..."
#    export AWS_REGION="us-east-1"
#    export PIPELINE_API_KEY="..."
#
# Note: application-local.properties is gitignored and will not be committed

# Azure SQL Database Configuration (Spring Data JPA)
# Fill in your actual database credentials
spring.datasource.url=jdbc:sqlserver://rankforge-db.database.windows.net:1433;database=rankforge-db-staging;encrypt=true;trustServerCertificate=false;hostNameInCertificate=*.database.windows.net;loginTimeout=300;socketTimeout=300000;queryTimeout=300;
spring.datasource.username=your_username_here
spring.datasource.password=your_password_here
spring.datasource.driver-class-name=com.microsoft.sqlserver.jdbc.SQLServerDriver

# JPA/Hibernate Configuration for Local Development
spring.jpa.database-platform=org.hibernate.dialect.SQLServerDialect
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.jdbc.batch_size=50
spring.jpa.properties.hibernate.order_inserts=true
spring.jpa.properties.hibernate.order_updates=true

# Pipeline API Security Configuration
# API key for securing pipeline endpoints (required)
# Generate a secure random string for local testing, e.g.: openssl rand -hex 32
rankforge.api.key=your_api_key_here

